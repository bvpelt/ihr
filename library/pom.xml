    <build>
        <plugins>
            <plugin>
                <groupId>org.openapitools</groupId>
                <artifactId>openapi-generator-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <!-- ihr api -->
                        <id>generate-ihr-api</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>${project.basedir}/src/main/resources/ihr.4.0.1-revised.yaml</inputSpec>

                            <generatorName>spring</generatorName>
                            <library>spring-boot</library>
                            <supportingFilesToGenerate>ApiUtil.java</supportingFilesToGenerate>
                            <configOptions>
                                <apiPackage>nl.bsoft.ihr.generated.api</apiPackage>
                                <basePackage>nl.bsoft.ihr.generated</basePackage>
                                <configPackage>nl.bsoft.ihr.generated.generated.configuration</configPackage>
                                <invokerPackage>nl.bsoft.ihr.generated.invoker</invokerPackage>
                                <modelPackage>nl.bsoft.ihr.generated.model</modelPackage>
                                <dateLibrary>java8</dateLibrary>
                                <delegatePattern>true</delegatePattern>
                                <hideGenerationTimestamp>true</hideGenerationTimestamp>
                                <interfaceOnly>true</interfaceOnly>
                                <requestMappingMode>none</requestMappingMode>
                                <serializationLibrary>jackson</serializationLibrary>
                                <skipDefaultInterface>true</skipDefaultInterface>
                                <useBeanValidation>false</useBeanValidation>
                                <useJakartaEe>true</useJakartaEe>
                                <useSpringBoot3>true</useSpringBoot3>
                                <validateSpec>true</validateSpec>
                            </configOptions>
                            <schemaMappings>
                                <schemaMapping>GeoJSONGeometry=org.wololo.geojson.GeoJSON</schemaMapping>
                                <schemaMapping>Point=org.wololo.geojson.Point</schemaMapping>
                                <schemaMapping>MultiPoint=org.wololo.geojson.MultiPoint</schemaMapping>
                                <schemaMapping>LineString=org.wololo.geojson.LineString</schemaMapping>
                                <schemaMapping>MultiLineString=org.wololo.geojson.MultiLineString</schemaMapping>
                                <schemaMapping>Polygon=org.wololo.geojson.Polygon</schemaMapping>
                                <schemaMapping>MultiPolygon=org.wololo.geojson.MultiPolygon</schemaMapping>
                                <schemaMapping>GeometryCollection=org.wololo.geojson.GeometryCollection</schemaMapping>
                                <schemaMapping>Health=org.springframework.boot.actuate.health.Status</schemaMapping>
                                <schemaMapping>Info=Object</schemaMapping>
                            </schemaMappings>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.flywaydb</groupId>
                <artifactId>flyway-maven-plugin</artifactId>
                <configuration>
                    <url>jdbc:postgresql://localhost:5432/ihr</url>
                    <user>testuser</user>
                    <password>12345</password>
                </configuration>
            </plugin>
            <plugin>
                <groupId>pl.project13.maven</groupId>
                <artifactId>git-commit-id-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
